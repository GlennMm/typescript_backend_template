{
  "name": "saas-backend",
  "version": "1.0.0",
  "description": "Production-ready SaaS backend with multi-tenancy",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "db:generate:main": "drizzle-kit generate:sqlite --config=drizzle.config.ts",
    "db:generate:tenant": "drizzle-kit generate:sqlite --config=drizzle.tenant.config.ts",
    "db:generate": "bun run db:generate:main && bun run db:generate:tenant",
    "db:migrate": "bun src/db/migrate.ts",
    "db:seed": "bun src/db/seed.ts",
    "db:studio": "drizzle-kit studio",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "format": "biome format --write src"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.1.6",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/supertest": "^6.0.3",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.7",
    "supertest": "^7.1.4",
    "typescript": "^5.9.3"
  }
}